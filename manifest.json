{
    "manifest_version": 3,
    "name": "Webpage Summarizer",
    "version": "1.0",
    "description": "Summarizes the current webpage using Gemini.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}