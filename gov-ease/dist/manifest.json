{
    "manifest_version": 3,
    "name": "GovEase",
    "version": "1.0.0",
    "description": "An AI assistant that helps elderly users navigate and fill out government forms with ease.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://www.ssa.gov/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.ssa.gov/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}